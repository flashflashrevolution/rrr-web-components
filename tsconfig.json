{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": [
      "esnext",
      "dom",
    ],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src/"
  },
  "include": [
    "./src/**/*.ts",
  ]
}
